    <class>modelo.Usuario</class>
    <class>modelo.Cartao</class>
    <class>modelo.Carro</class>
    <class>modelo.Cliente</class>
    <class>modelo.Bandeira</class>
    <class>modelo.Endereco</class>
    <class>modelo.Categoria</class>
    <class>modelo.Aluguel</class>
    <class>modelo.Imagem</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/autonet?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
    </properties>
