<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    
    <application>
        <locale-config>
            <default-locale>pt_BR</default-locale>
            <supported-locale>en_US</supported-locale>
            <supported-locale>pt_BR</supported-locale>
        </locale-config>
        
        <resource-bundle>
            <base-name>extras.messages</base-name>
            <var>msgs</var>
        </resource-bundle>
    </application>
    
    <managed-bean>
        <managed-bean-name>carroBean</managed-bean-name>
        <managed-bean-class>beans.CarroBean</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>categoriaBean</managed-bean-name>
        <managed-bean-class>beans.CategoriaBean</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
</faces-config>
